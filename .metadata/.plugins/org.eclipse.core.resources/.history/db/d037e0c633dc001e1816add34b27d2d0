@keyframes rotate {
    from {
        transform: rotate(0deg); /* 시작 각도 */
    }
    to {
        transform: rotate(360deg); /* 종료 각도 */
    }
}
/* 각 이미지에 대한 스타일 */
.article-container img:nth-child(1) {
    width: 100%; /* 이미지가 요소의 너비에 맞게 조절될 수 있도록 설정 */
    height: auto; /* 이미지의 높이를 자동으로 조정하여 비율 유지 */
    display: block; /* 인라인 요소로 설정된 이미지를 블록 요소로 변경하여 위아래 여백을 조절할 수 있도록 함 */
    position: relative; /* 이미지에 상대적인 위치 지정 */
    top: 20px; /* 이미지를 아래로 이동합니다. */
    
    animation: rotate 10s linear infinite; /* 회전 애니메이션 적용 */
}

